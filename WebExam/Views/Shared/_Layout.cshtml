<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <div id="mainwrapper">
        <footer>

            <div class="logo">
                <img src="../../Content/Img/logo.gif" />
                <span>Сайт изучения английского языка</span>
            </div>

            <nav role="navigation" class="navbar-default">

                <div class="navbar-header">
                    <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                        @*<span class="sr-only">Toggle navigation</span>*@
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div id="navbarCollapse" class="collapse navbar-collapse">

                    <ul class="nav navbar-nav navbar-right nav-tabs">
                        <li><a href="#">Главная</a></li>
                        <li><a href="#">Статьи</a></li>

                        <li class="dropdown">

                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Слова
                                <b class="caret"></b>
                            </a>
                            <p></p>
                            <ul class="dropdown-menu">
                                <li><a href=@Url.Action("Create", "Word")>Создать тест</a></li>
                                <li><a href=@Url.Action("WordPackage", "Word")>Пройти тест</a></li>

                            </ul>


                        </li>

                        <li><a href=@Url.Action("About","Home")>О сайте</a></li>
                    </ul>

                </div>
            </nav>

        </footer>


        @RenderBody()

        
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


